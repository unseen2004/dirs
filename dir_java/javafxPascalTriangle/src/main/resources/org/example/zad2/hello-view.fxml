<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.zad2.HelloController">
    <children>
        <Label fx:id="area" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="100.0" prefWidth="300.0" prefHeight="300.0" alignment="TOP_LEFT" style="-fx-font-size: 12px; -fx-font-family: 'monospace';"/>
        <Button text="run" onAction="#runclicked" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0" prefWidth="100.0" prefHeight="100.0" style="-fx-font-size:30px;"/>
        <TextField fx:id="input" AnchorPane.leftAnchor="100.0" AnchorPane.topAnchor="0" prefWidth="300.0" prefHeight="100.0" style="-fx-font-size: 40px;"/>
    </children>
</AnchorPane>